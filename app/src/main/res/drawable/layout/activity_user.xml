<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EDF1F7"
    tools:context=".UserActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/textLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selamat"
            android:textColor="@color/colorPrimary"
            android:textSize="26sp" />

    </LinearLayout>

        <TextView
            android:id="@+id/t_Pegawai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="30dp"
            android:textColor="#17103E"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/t_Apotik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="30dp"
            android:textColor="#B4BAC3"
            android:textSize="16sp" />

    <LinearLayout
        android:layout_marginBottom="24dp"
        android:weightSum="2"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/bt_Tambah"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/bgitem"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/tambah" />

            <TextView
                android:id="@+id/textItemOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="22dp"
                android:text="@string/tambaho"
                android:textColor="#17103E"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_Daftar_Obat"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:background="@drawable/bgitem"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/daftar" />

            <TextView
                android:id="@+id/textItemTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="22dp"
                android:text="@string/daftarobat"
                android:textColor="#17103E"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="24dp"
        android:weightSum="2"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/bgitem"
            android:layout_width="0dp"
            android:layout_height="80dp">

            <ImageView
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/riwayat"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/textItemThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="22dp"
                android:text="@string/riwayat"
                android:textColor="#17103E"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_Pegawai"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:background="@drawable/bgitem"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/pegawai" />

            <TextView
                android:id="@+id/textItemFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="28dp"
                android:text="@string/pegawai"
                android:textColor="#17103E"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="24dp"
        android:weightSum="2"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/bgitem"
            android:layout_width="0dp"
            android:layout_height="80dp">

            <ImageView
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/cari"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/textItemFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="22dp"
                android:text="@string/cario"
                android:textColor="#17103E"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_Setting"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:background="@drawable/bgitem"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/settings" />

            <TextView
                android:id="@+id/textItemSix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="28dp"
                android:text="@string/pengaturan"
                android:textColor="#17103E"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="24dp"
            android:weightSum="2"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/bt_Keluar"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:background="@drawable/bgitem"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/logout" />

                <TextView
                    android:id="@+id/textItemOn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="28dp"
                    android:text="@string/keluar"
                    android:textColor="#17103E"
                    android:textSize="16sp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</ScrollView>